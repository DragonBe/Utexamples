<phpunit 
  colors="true" 
  stopOnFailure="true" 
  syntaxCheck="true">

  <testsuite name="Name for my test suite">
    <directory>./</directory>
  </testsuite>

  <logging>
    <log 
      type="coverage-html" 
      target="./build/coverage" 
      charset="UTF-8" 
      yui="true" 
      highlight="true" 
      lowUpperBound="35" 
      highLowerBound="70"/>
  </logging>
</phpunit>
